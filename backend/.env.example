# Example environment for vod-tender (copy to backend/.env)

# Twitch credentials (required to enable chat recording)
TWITCH_CHANNEL=
TWITCH_BOT_USERNAME=
TWITCH_OAUTH_TOKEN=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# VOD context
TWITCH_VOD_ID=demo-vod-id
# RFC3339, e.g. 2025-01-01T00:00:00Z
TWITCH_VOD_START=

# Database
DB_DSN=vodtender.db
DATA_DIR=data

# YouTube OAuth2 credentials
# Provide either *_FILE with a path to JSON or *_JSON containing JSON
YT_CREDENTIALS_FILE=
YT_CREDENTIALS_JSON=
YT_TOKEN_FILE=
YT_TOKEN_JSON=
